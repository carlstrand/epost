ssl = required

ssl_cert = </etc/letsencrypt/live/{{ mailserver_server_hostname }}/fullchain.pem
ssl_key = </etc/letsencrypt/live/{{ mailserver_server_hostname }}/privkey.pem

ssl_protocols = !SSLv3,!TLSv1

ssl_cipher_list = EECDH+AES:EDH+AES+aRSA # PFS only
ssl_prefer_server_ciphers = yes
ssl_dh_parameters_length = 2048

